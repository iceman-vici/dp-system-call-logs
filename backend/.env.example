# Dialpad Configuration
DIALPAD_API_KEY=dp_your_api_key_here
DIALPAD_BASE_URL=https://dialpad.com

# Primary Airtable Configuration (Call Logs)
AIRTABLE_PAT=pat_your_personal_access_token
AIRTABLE_BASE_ID=app_your_base_id

# Airtable Table Names
AIRTABLE_CUSTOMERS_TABLE=Customers
AIRTABLE_CALLS_TABLE=Calls

# Secondary Airtable Base Configuration (Client Database)
# Leave empty to disable updating secondary base
SECONDARY_AIRTABLE_PAT=pat_your_secondary_pat_here
SECONDARY_AIRTABLE_BASE_ID=app_your_secondary_base_id
SECONDARY_AIRTABLE_TABLE=your_table_name_here
SECONDARY_PHONE_FIELD=Phone Format
SECONDARY_LAST_CALL_FIELD=Dialpad Last Connected Call Date

# Field Mappings
CUSTOMER_PHONE_FIELD=Phone
CALLS_CUSTOMER_LINK_FIELD=Customer
CALLS_UNMATCHED_PHONE_FIELD=Unmatched Phone

# Sync Configuration
DAYS_BACK=0  # Set to 0 for today only, 1 for yesterday, etc.
BACKFILL_GRACE_SECONDS=300  # 5 minutes grace period
DEFAULT_REGION=SG
SYNC_INTERVAL=300000  # Run every 5 minutes
PAGE_SIZE=50  # Maximum is 50 for Dialpad API
REALTIME_ONLY=true  # Only fetch from current day onwards

# Time Range Configuration (use this OR business hours, not both)
# Format: HH:MM in 24-hour format
# Leave empty to sync entire day or use business hours
TIME_RANGE_START=04:00  # 4:00 AM
TIME_RANGE_END=06:00    # 6:00 AM
TIME_RANGE_TIMEZONE=America/New_York

# Specific Date Range (optional)
# Format: YYYY-MM-DD
# If set, will override DAYS_BACK and fetch from this specific date
SPECIFIC_DATE=  # e.g., 2025-09-25 to fetch from September 25, 2025

# Business Hours Configuration (ignored if TIME_RANGE is set)
BUSINESS_HOURS_ENABLED=false  # Set to true to use business hours instead
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=18
BUSINESS_HOURS_TIMEZONE=America/New_York

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# State Management
STATE_DIR=./state

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Display Timezone (for Airtable display)
DISPLAY_TIMEZONE=America/New_York