# Dialpad Configuration
DIALPAD_API_KEY=dp_your_api_key_here
DIALPAD_BASE_URL=https://dialpad.com

# Airtable Configuration
AIRTABLE_PAT=pat_your_personal_access_token
AIRTABLE_BASE_ID=app_your_base_id

# Airtable Table Names
AIRTABLE_CUSTOMERS_TABLE=Customers
AIRTABLE_CALLS_TABLE=Calls

# Field Mappings
CUSTOMER_PHONE_FIELD=Phone
CALLS_CUSTOMER_LINK_FIELD=Customer
CALLS_UNMATCHED_PHONE_FIELD=Unmatched Phone

# Sync Configuration
DAYS_BACK=0  # Set to 0 for real-time only (today's calls)
BACKFILL_GRACE_SECONDS=300  # 5 minutes grace period for recent calls
DEFAULT_REGION=SG
SYNC_INTERVAL=300000  # Run every 5 minutes
PAGE_SIZE=50  # Maximum is 50 for Dialpad API
REALTIME_ONLY=true  # Only fetch from current day onwards

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info

# State Management
STATE_DIR=./state

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Display Timezone (for Airtable display)
DISPLAY_TIMEZONE=America/New_York